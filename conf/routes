# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                controllers.Application.index()
GET     /story/:project                  controllers.Application.story(project)
GET     /story/:project/listen           controllers.Application.listen(project)
GET     /story/:project/last             controllers.Application.last(project)
POST    /story/eval                      controllers.Application.eval()

GET     /story/share/google/signin      controllers.Google.signIn()
GET     /story/share/google/callback    controllers.Google.signInCallback(code: Option[String] ?= None, error: Option[String] ?= None)
GET     /story/share/google/contacts    controllers.Google.contacts

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.at(path="/public", file)
