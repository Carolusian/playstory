# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                controllers.Application.index()
GET     /signin                          controllers.Application.signin()
GET     /signin/callback                 controllers.Application.signinCallback()

GET     /signout                         controllers.Application.signout()

GET     /story/home                      controllers.Story.home()
GET     /story/:project                  controllers.Story.view(project: String)
GET     /story/:project/inbox            controllers.Story.inbox(project: String)
GET     /story/:project/listen           controllers.Story.listen(project: String)
GET     /story/:project/last             controllers.Story.last(project: String)
GET     /story/:project/last/:from       controllers.Story.lastFrom(project: String, from: Long)
POST    /story/:project/log/:id          controllers.Story.comment(project: String, id: String)
POST    /story/eval                      controllers.Story.eval()

GET     /story/share/google/signin      controllers.Google.signIn()
GET     /story/share/google/callback    controllers.Google.signInCallback(code: Option[String] ?= None, error: Option[String] ?= None)
GET     /story/share/google/contacts    controllers.Google.contacts()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.at(path="/public", file)
